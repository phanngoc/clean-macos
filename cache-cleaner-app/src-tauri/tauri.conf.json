{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Cache Cleaner",
  "version": "0.1.0",
  "identifier": "com.cachecleaner.app",
  "build": {
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Cache Cleaner",
        "width": 800,
        "height": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
